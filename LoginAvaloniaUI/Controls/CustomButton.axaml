<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:LoginAvaloniaUI.Controls"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="50"
             x:Class="LoginAvaloniaUI.Controls.CustomButton">
    

    <!--Establecer el tipo para compiled bindings-->
    <Design.DataContext>
		<local:CustomButton Text="Vista Previa"
                            BackgroundColor="Yellow"
                            HoverColor="DarkGray"/>  <!--referencia al propio control-->
    </Design.DataContext>

    <!--Defino la estructurua de el componente-->
  <Border Background="{Binding BackgroundColor, RelativeSource={RelativeSource AncestorType=local:CustomButton}}" 
          CornerRadius="8"
          Padding="15,10">
      <Border.Styles>
		  <Style Selector="Border:pointerover">
			  <Setter Property="Background" Value="{Binding HoverColor, RelativeSource={RelativeSource AncestorType=local:CustomButton}}"/>
          </Style>
      </Border.Styles>

      <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
		  <PathIcon Data="{Binding Icon, RelativeSource={RelativeSource AncestorType=local:CustomButton}}"
                    Width="20"
                    Height="20"
                    Foreground="White"/>
          <TextBlock Text="{Binding Text, RelativeSource={RelativeSource AncestorType=local:CustomButton}}"
                     Foreground="White"
                     FontSize="16"/>
      </StackPanel>	  
  </Border>
</UserControl>
