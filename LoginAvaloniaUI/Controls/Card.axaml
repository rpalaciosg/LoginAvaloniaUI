<?xml version="1.0" encoding="utf-8"?>
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:LoginAvaloniaUI.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"             
             x:Class="LoginAvaloniaUI.Controls.Card">
   <Border Background="White"
            CornerRadius="12"
            Padding="20"
            BoxShadow="0 4 12 0 #20000000">
        
        <StackPanel Spacing="15">
            <!-- Título de la tarjeta -->
            <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=controls:Card}}" 
                      FontSize="18" 
                      FontWeight="Bold"/>
            
            <!-- Descripción -->
            <TextBlock Text="{Binding Description, RelativeSource={RelativeSource AncestorType=controls:Card}}" 
                      TextWrapping="Wrap"
                      Foreground="Gray"/>
            
            <!-- ⭐ REUTILIZAMOS EL CustomButton DENTRO DE LA TARJETA -->
            <controls:CustomButton 
                Text="{Binding ButtonText, RelativeSource={RelativeSource AncestorType=controls:Card}}"
                BackgroundColor="{Binding ButtonColor, RelativeSource={RelativeSource AncestorType=controls:Card}}"
                HoverColor="{Binding ButtonHoverColor, RelativeSource={RelativeSource AncestorType=controls:Card}}"
                HorizontalAlignment="Right"/>
        </StackPanel>
    </Border>
</UserControl>
