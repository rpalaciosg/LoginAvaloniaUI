<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:LoginAvaloniaUI.Controls"
             xmlns:vm="clr-namespace:LoginAvaloniaUI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LoginAvaloniaUI.Controls.CardGrid"
             x:DataType="vm:MainWindowViewModel">
  <ScrollViewer>
        <ItemsControl ItemsSource="{Binding Cards}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <!-- Grid responsivo de 3 columnas -->
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="vm:CardItem">
                    <!-- Cada tarjeta contiene su propio boton -->
                    <Border Margin="10">
                        <controls:Card 
                            Title="{Binding Title}"
                            Description="{Binding Description}"
                            ButtonText="Ver detalles"
                            ButtonColor="{Binding Color}"
                            ButtonHoverColor="{Binding HoverColor}"
                            Width="250"/>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
